/* 搜索区 */
.videoContainer .header {
  display: flex;
  padding: 10rpx;
}

.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .search {
  border: 1rpx solid #eee;
  /* 
  flex-grow:可拉伸  flex-shrink:可压缩  flex-basic:当前元素的宽度
  flex默认值: flex-grow:0  flex-shrink:1  flex-basic:auto
  flex:1: flex-grow:1  flex-shrink:1  flex-basic:0%
  flex:auto: flex-grow:auto  flex-shrink:1  flex-basic:auto
  */
  /* flex为1回导致父元素宽度自动为100% */
  flex: 1;
  text-align: center;
  margin: 0 20rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  color: #d43c33;
}


/* 导航区 */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}

.navScroll .navItem {
  padding: 0px 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.navScroll .navContent {
  height: 60rpx;
  box-sizing: border-box;
}

.navItem .active {
  border-bottom: 4rpx solid #d43c33;
}

/* 视频区 */
.videoScroll {
  height: calc(100vh - 152rpx);
}

.videoItem {
  padding: 0 40rpx;
  margin-top: 10rpx;
}

.videoItem video {
  width: 100%;
  height: 360rpx;
  border-radius: 15rpx;
}

.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}

.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
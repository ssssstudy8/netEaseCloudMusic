<view class="login">
  <!-- 图片 -->
  <view class="outside">
    <view class="middle">
      <view class="inside">
        <view class="logo">
          <image src="/static/images/logo.png" />
        </view>
      </view>
    </view>
  </view>

  <!-- 登录 -->
  <view class="inputContainer">
    <view class="input-item">
      <input input="text" placeholder="请输入手机号" bindinput="handleInput" id="phone" />
      <input input="text" placeholder="请输入密码" bindinput="handleInput" id="password" />
    </view>
    <button class="loginBtn" bindtap="login">登录</button>
    <view class="forgetPassword">忘记密码</view>
    <view class="bottom">
      还没有账号？
      <text>马上注册</text>
    </view>
  </view>
</view>
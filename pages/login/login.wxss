page {
  height: 100%;
}

.login {
  width: 100%;
  height: 100%;
}

/* 图画 */
.outside {
  position: relative;
  top: 60rpx;
  margin: auto;
  width: 600rpx;
  height: 600rpx;
  border: 2rpx solid rgb(247, 217, 217);
  border-radius: 50%;
}

.middle {
  margin: 75rpx auto;
  width: 450rpx;
  height: 450rpx;
  border: 2rpx solid rgb(247, 217, 217);
  border-radius: 50%;
}

.inside {
  margin: 75rpx auto;
  width: 300rpx;
  height: 300rpx;
  border: 2rpx solid rgb(247, 217, 217);
  border-radius: 50%;
}
.logo{
  display: flex;
  flex-direction: column;
  align-items: center;  
}
.logo image {
  margin-top: 75rpx;
  width: 150rpx;
  height: 150rpx;
}

/* 登录 */
.inputContainer {
  margin: 0 50rpx;
}

.input-item {
  margin-top: 150rpx;
}

.input-item input {
  height: 100rpx;
  margin: 25rpx auto;
  width: 85%;
  background-color: rgb(74, 74, 74);
  border-radius: 20rpx;
  padding-left: 20rpx;
  color: #fff;
}

.loginBtn {
  width: 570rpx !important;
  margin-top: 50rpx;
  color: #fff;
  border-radius: 20rpx;
  background-color: rgb(230, 93, 93);
  padding: 20rpx 0;
}

.forgetPassword {
  margin-top: 20rpx;
  text-align: center;
  color: rgb(61, 61, 61);
  font-size: 28rpx;
}

.bottom {
  position: absolute;
  font-size: 30rpx;
  bottom: 30rpx;
  left: 220rpx;
}
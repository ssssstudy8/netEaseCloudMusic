/**index.wxss**/

/* 轮播图 */
.carousel {
  width: 100%;
  height: 350rpx;
}

.carousel image {
  width: 100%;
  height: 100%;
}

/* 五个图标导航区域 */
.navContainer {
  display: flex;
  margin: 20rpx 0;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont {
  width: 95rpx;
  height: 95rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff
}

.navItem text {
  margin-top: 12rpx;
  font-size: 28rpx;
}

/* 推荐内容区 */
.recommendContainer {
  padding: 0 20rpx;
  height: 360rpx;
}

/* 推荐内容区 */
.recommendContainer .recommed {
  display: flex;
}

.recommendContainer .scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.recommendContainer .scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.recommendContainer .scrollItem text {
  font-size: 26rpx;
  /* 单行文本溢出用省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出隐藏 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* 设置对齐方式 */
  -webkit-line-clamp: 2;
}
/* 推荐歌曲 */
.header {
  margin: 20rpx 0rpx 4rpx 0;
}

.header .title {
  line-height: 60rpx;
  font-size: 30rpx;
  color: rgb(50, 50, 50);
}

.header .more {
  float: right;
  border: 1rpx solid #333;
  padding: 8rpx 18rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
}


/* 排行榜  */
.topList {
  padding: 20rpx;
}

.topListSwiper {
  height: 480rpx;
}

.swiperItem {
  width: 96%;
  background: #fbfbfb;
  height: 460rpx;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;

}

.musicItem {
  /* 当一个元素设置为flex，其子元素会自动成为block元素*/
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

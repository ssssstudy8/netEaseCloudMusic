.containerUser {
  width: 100%;
  height: 100%;
}

/* 个人信息 */
.userSection {
  width: 100%;
  height: 500rpx;
  position: relative;
  padding: 100rpx 30rpx;
}

.userSection .bgImg {
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0.6;
  width: 100%;
  height: 100%;
  filter: blur(1px);
}

.userInfo {
  margin-top: 60rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.userInfo .userNameBox {
  margin: 25rpx;
}

.userInfo .userName {
  font-size: 36rpx;
}

.userInfo .useImg {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}


/* 会员信息 */
.vipInfo {
  position: relative;
  display: flex;
  flex-direction: column;
  background: rgba(0, 0, 0, .7);
  height: 240rpx;
  width: 86%;
  color: #f7d680;
  border-radius: 16rpx 16rpx 0 0;
  padding: 20rpx 24rpx;
}

.vipInfo .card-bg {
  position: absolute;
  width: 380rpx;
  height: 260rpx;
  right: 0;
  top: 20rpx;
}

.vipInfo .b-btnd {
  position: absolute;
  padding: 5rpx 8rpx;
  border-radius: 10rpx;
  right: 20rpx;
  width: 135rpx;
  height: 42rpx;
  line-height: 42rpx;
  background: #d8cba9;
  color: #212121;
  font-size: 30rpx;
  border: 1px solid #2e2e2e;
  z-index: 1;
}

.vipInfo .vipName {
  padding: 4rpx;
}

.vipName .iconfont {
  margin-right: 10rpx;
  font-size: 40rpx;
}

.vipInfo .EnglishName {
  margin-top: 50rpx;
  font-size: 38rpx;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  margin-bottom: 10rpx;
}

/* 五个图标 */
.userContainer {
  margin-top: -140rpx;
  padding: 0 20rpx;
  position: relative;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}

.userContainer .arc {
  position: absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}

.userContainer .nav-item {
  display: flex;
  background: #fff;
  padding: 30rpx 0;
  border-radius: 15rpx;
}

.nav-item .userItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.userItem .iconfont {
  font-size: 44rpx;
  color: #b81010;
}

.userItem .title {
  font-size: 30rpx;
}

/* 个人播放信息 */
.userMusicInfo {
  background-color: #f5f5f5;
  padding: 10px 0;
}

/* 最近播放记录 */
.userMusicInfo .playedBox {
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 20rpx;
  background-color: #fff;
  margin: 0 auto;
}

.playedBox .played {
  padding: 10rpx 0;
}

.playedBox .noPlayed {
  font-size: 25rpx;
}

.recentScroll {
  display: flex;
  height: 210rpx;
}

.recentItem {
  margin-right: 20rpx;
}

.recentItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin: 10rpx 0;
}

/* 歌单 */
.playlistTitle {
  margin: 25rpx;
  font-size: 34rpx;
}

.separate {
  padding: 0 20rpx;
}

/* 创建歌单 */
.myCreateList {
  width: 97%;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  background-color: #fff;
  margin: 15rpx auto;
  padding-bottom: 20rpx;
}

.myCreateList .title {
  font-size: 32rpx;
  padding: 30rpx 0rpx 10rpx 10rpx;
}

.myCreateList .name {
  font-size: 34rpx;
  height: 110rpx;
  line-height: 110rpx;
  margin-left: 20rpx;
}

.createPlaylist {
  display: flex;
}

.createPlaylist image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin: 10rpx 0;
}

/* 收藏歌单 */
.myCollectionList {
  width: 97%;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  background-color: #fff;
  margin: 20rpx auto;
  padding-bottom: 20rpx;
}

.collectionPlaylist {
  display: flex;
}

.myCollectionList .title {
  font-size: 32rpx;
  padding: 30rpx 0rpx 10rpx 10rpx;
}

.myCollectionList .name {
  font-size: 32rpx;
  height: 110rpx;
  line-height: 110rpx;
  margin-left: 20rpx;
  overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical; /* 设置对齐方式 */
	-webkit-line-clamp: 2;
}

.collectionPlaylist image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin: 10rpx 0;
}
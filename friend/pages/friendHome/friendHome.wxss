.friendHomeContainer {
  width: 100%;
  background-color: #e5e5e5;
  padding-bottom: 50rpx;
}

.backgroundImg image {
  width: 100%;
  height: 650rpx;
}

/* 个人信息 */
.infoContainer {
  position: relative;
  width: 90%;
  margin: 0 auto;
  top: -100rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding-bottom: 8rpx;
}

.infoContainer .avatar {
  display: flex;
  justify-content: center;
}

.infoContainer .avatar image {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  position: absolute;
  top: -75rpx;
}

.infoContainer .userInfo {
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}

.userInfo .userNameBox {
  text-align: center;
  font-size: 40rpx;
  padding: 10rpx 0;
}

.userInfo .info {
  font-size: 32rpx;
  color: #3d3d3d;
  width: 60%;
  margin: 10rpx auto;
  display: flex;
  flex-direction: row;

}

.info text {
  text-align: center;
  width: 33%;
}

.infoBtn {
  display: flex;
}

.infoBtn .concern {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  font-size: 24rpx;
  width: 200rpx;
  height: 75rpx;
  color: #4d4c4c;
  background-color: #d8d8d8;
  border-radius: 30rpx;
  margin-left: 130rpx;
  padding: 4rpx;
}
.concern .time{
  font-size: 20rpx;
}

.infoBtn .talk {
  margin-top: 15rpx;
  font-size: 28rpx;
  width: 200rpx;
  height: 75rpx;
  color: #fcfafa;
  background-color: #ed4b4b;
  border-radius: 30rpx;
  margin-right: 130rpx;
}


/* 分类 */
.category{
  display: flex;
  padding: 0 50rpx;
}
.category text{
  position: relative;
  top: -50rpx;
  font-size: 38rpx;
  width: 30%;
  text-align: center;
}


/* 基本信息 */
.baseInfoContainer {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 20rpx;
  padding-bottom: 30rpx;
}

.baseInfoContainer .baseInfo {
  padding: 40rpx 0rpx 10rpx 40rpx;
  font-size: 42rpx;
}

.infoItem {
  display: flex;
  flex-direction: column;
}

.infoItem text {
  font-size: 30rpx;
  color: #5c5c5c;
  margin: 15rpx 40rpx;
}